<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent" android:weightSum="1">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:id="@+id/EventDescription"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/category"
                    android:gravity="center"
                    android:id="@+id/tvCategoryIcon"
                    android:textColor="@color/main"
                    android:padding="@dimen/text_padding"
                    android:layout_below="@+id/EventDescription"
                    android:layout_toLeftOf="@+id/tvCategory"
                    android:layout_alignParentLeft="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/unexpected_error"
                    android:id="@+id/tvCategory"
                    android:textColor="@color/main"
                    android:padding="@dimen/text_padding"
                    android:layout_below="@+id/EventDescription"
                    android:layout_toRightOf="@+id/equalizer"
                    android:layout_alignParentRight="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/place"
                    android:gravity="center"
                    android:id="@+id/tvLocationIcon"
                    android:textColor="@color/main"
                    android:padding="@dimen/text_padding"
                    android:layout_below="@+id/tvCategoryIcon"
                    android:layout_toLeftOf="@+id/tvLocation"
                    android:layout_alignParentLeft="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/unexpected_error"
                    android:id="@+id/tvLocation"
                    android:textColor="@color/main"
                    android:padding="@dimen/text_padding"
                    android:layout_below="@+id/tvCategory"
                    android:layout_toRightOf="@+id/equalizer"
                    android:layout_alignParentRight="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/date"
                    android:gravity="center"
                    android:id="@+id/tvDateIcon"
                    android:textColor="@color/main"
                    android:padding="@dimen/text_padding"
                    android:layout_below="@+id/tvLocationIcon"
                    android:layout_toLeftOf="@+id/tvDate"
                    android:layout_alignParentLeft="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/unexpected_error"
                    android:id="@+id/tvDate"
                    android:textColor="@color/main"
                    android:padding="@dimen/text_padding"
                    android:layout_below="@+id/tvLocation"
                    android:layout_toRightOf="@+id/equalizer"
                    android:layout_alignParentRight="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/photo"
                    android:gravity="center"
                    android:id="@+id/tvPhotoIcon"
                    android:textColor="@color/main"
                    android:padding="@dimen/text_padding"
                    android:layout_below="@+id/tvDateIcon"
                    android:layout_toLeftOf="@+id/tvPhoto"
                    android:layout_alignParentLeft="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/unexpected_error"
                    android:id="@+id/tvPhoto"
                    android:textColor="@color/main"
                    android:padding="@dimen/text_padding"
                    android:layout_below="@+id/tvDate"
                    android:layout_toRightOf="@+id/equalizer"
                    android:layout_alignParentRight="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/lock"
                    android:gravity="center"
                    android:id="@+id/tvLockIcon"
                    android:textColor="@color/main"
                    android:padding="@dimen/text_padding"
                    android:layout_below="@+id/tvPhotoIcon"
                    android:layout_toLeftOf="@+id/tvLock"
                    android:layout_alignParentLeft="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/unexpected_error"
                    android:id="@+id/tvLock"
                    android:textColor="@color/main"
                    android:padding="@dimen/text_padding"
                    android:layout_below="@+id/tvPhoto"
                    android:layout_toRightOf="@+id/equalizer"
                    android:layout_alignParentRight="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/category"
                    android:id="@+id/equalizer"
                    android:visibility="invisible"
                    android:padding="@dimen/text_padding"
                    android:layout_below="@+id/tvLockIcon"
                    android:layout_alignParentLeft="true"/>


        </RelativeLayout>
        <ListView android:id="@+id/left_drawer"
                  android:layout_width="@dimen/drawer_width"
                  android:layout_height="match_parent"
                  android:layout_gravity="start"
                  android:choiceMode="singleChoice"
                  android:divider="@drawable/divider_repeat"
                  android:dividerHeight="4px"
                  android:background="@drawable/drawer_bg_repeat"/>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
